<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="defaultButtonStyle">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">@color/MAD.sys.dark.secondary_container</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/defaultButtonTextSize</item>
        <item name="android:textColor">@color/MAD.sys.dark.on_secondary_container</item>
    </style>

    <style name="largeButtonStyle">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">@color/MAD.sys.dark.secondary_container</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/defaultButtonTextSize</item>
        <item name="android:textColor">@color/MAD.sys.dark.on_secondary_container</item>
    </style>

    <style name="accentedButtonStyle">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">@color/MAD.sys.dark.tertiary_container</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/defaultButtonTextSize</item>
        <item name="android:textColor">@color/MAD.sys.dark.on_tertiary_container</item>
    </style>

    <style name="expressionTextViewStyle">
        <item name="android:textSize">@dimen/expressionTextSize</item>
        <item name="android:textColor">@color/MAD.sys.dark.primary</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="titleTextViewStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/MAD.sys.dark.on_background</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="errorTextViewStyle">
        <item name="android:textSize">@dimen/expressionTextSize</item>
        <item name="android:textColor">@color/MAD.sys.dark.error</item>
        <item name="android:fontFamily">@font/google_sans</item>
